<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckedTextView
        android:id="@+id/checkedTextView1"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="CheckedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <CheckedTextView
        android:id="@+id/checkedTextView2"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="CheckedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextView1" />

    <CheckedTextView
        android:id="@+id/checkedTextView3"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:text="CheckedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextView2" />

    <ImageButton
        android:id="@+id/goButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"

        android:layout_marginEnd="68dp"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pokeball" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Cool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveTextView" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton1" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Cute                                                          "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/goButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="140dp"
        android:text="Kanto vs Hoenn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="68dp"
        android:text="Do You Like The Color ..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moveTextView"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Do You Want Your Partner To Be ..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextView3" />
</androidx.constraintlayout.widget.ConstraintLayout>