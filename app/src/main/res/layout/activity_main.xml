<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Red"
        android:onClick="onCheckedClick1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="64dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pokeball"
        android:drawable="@drawable/pokeball"
        android:scaleType="fitCenter"
        android:text="GO"
        android:onClick="finalClick"

        android:textSize="@dimen/txt"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pokeball" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="122dp"
        android:layout_height="231dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveTextView">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:onClick="onRadioClick"
            android:text="Cool"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moveTextView" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:onClick="onRadioClick"
            android:text="Normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton1" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:onClick="onRadioClick"
            android:text="Cute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/goButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="228dp"
        android:text="Kanto vs Hoenn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="68dp"
        android:text="Do You Like The Color ..."
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moveTextView"
        android:layout_width="@dimen/txtWidth"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:textColor="@color/colorAccent"
        android:text="Do You Want Your Partner To Be ..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:text="Blue"
        android:onClick="onCheckedClick2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="140dp"
        android:layout_marginTop="96dp"
        android:text="Green"
        android:onClick="onCheckedClick3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="109dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pokeball" />
</androidx.constraintlayout.widget.ConstraintLayout>